# Example .pre-commit-config.yaml with mypy and pip-audit
# This is a REFERENCE - merge these sections into your existing .pre-commit-config.yaml

repos:
  # Existing: Ruff for linting and formatting
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.6.9
    hooks:
      - id: ruff
        args: [--fix, --exit-non-zero-on-fix]
        exclude: ^user-config\.py$
      - id: ruff-format
        exclude: ^user-config\.py$

  # Existing: Pre-commit hooks
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.6.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-added-large-files
        args: [--maxkb=1000]
      - id: check-merge-conflict
      - id: check-symlinks
      - id: detect-private-key

  # NEW: mypy for type checking
  - repo: https://github.com/pre-commit/mirrors-mypy
    rev: v1.8.0
    hooks:
      - id: mypy
        additional_dependencies:
          - django-stubs>=4.2.0
          - types-requests>=2.31.0
          - types-beautifulsoup4>=4.12.0
        args: [--config-file=pyproject.toml]
        exclude: ^(app/reviews/migrations/|user-config\.py)
        # Run on Python files only
        files: \.py$

  # NEW: pip-audit for dependency vulnerability scanning
  - repo: https://github.com/pypa/pip-audit
    rev: v2.7.0
    hooks:
      - id: pip-audit
        args:
          - --desc              # Show vulnerability descriptions
          - --skip-editable     # Skip editable packages
        # Note: This can be slow on every commit
        # Consider running only in CI/CD by adding:
        # stages: [manual]
